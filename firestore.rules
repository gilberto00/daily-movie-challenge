rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users: apenas o próprio usuário pode ler/escrever
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Daily Challenges: leitura pública, escrita apenas por Cloud Functions
    match /dailyChallenges/{date} {
      allow read: if true;
      allow write: if false; // Apenas Cloud Functions
    }
    
    // Comments: leitura pública, escrita autenticada
    match /comments/{commentId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.userId;
    }
  }
}
